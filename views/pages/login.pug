extends ../layouts/authentication.pug

block content
    .container
        .row.justify-content-center
            .col-lg-5
                .card.shadow-lg.border-0.rounded-lg.mt-5
                    .card-header
                        h3.text-center.font-weight-light.my-4 Acceso
                    .card-body
                        form
                            .form-group
                                label.small.mb-1(for='inputEmailAddress') Email
                                input#inputEmailAddress.form-control.py-4(type='email', placeholder='Tu email')
                            .form-group
                                label.small.mb-1(for='inputPassword') Contraseña
                                input#inputPassword.form-control.py-4(type='password', placeholder='Tu contraseña')
                            a.btn.btn-primary.btn-block(href='/admin/posts') Acceder
